<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageBare"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:src="@drawable/bare" />
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="cursive"
        android:text="StuStay"
        android:textColor="#093960"
        android:textSize="40dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageBare"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Search adresse near you"
        android:padding="16dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/linearContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="472dp"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="287dp"
                        android:layout_height="197dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="71dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/one" />


                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="297dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="-302dp"
                        android:layout_marginTop="298dp"
                        android:layout_toRightOf="@id/image1"
                        android:text="Amazing apartment for a family!" />


                    <Button
                        android:id="@+id/btnOrderNow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description1"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="49dp"
                        android:backgroundTint="#67BAD0"
                        android:minHeight="49dp"
                        android:onClick="onOrderNowClick"
                        android:text="Order Now"
                        tools:ignore="TouchTargetSizeCheck" />


                    <Button
                        android:id="@+id/btnHeart1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description1"
                        android:layout_marginLeft="97dp"
                        android:layout_marginTop="43dp"
                        android:layout_toRightOf="@id/btnOrderNow1"
                        android:backgroundTint="#67BAD0"
                        android:text="❤️" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="472dp"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="287dp"
                        android:layout_height="197dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="71dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/description2"
                        android:layout_width="297dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="-302dp"
                        android:layout_marginTop="298dp"
                        android:layout_toRightOf="@id/image2"
                        android:text="Cozy studio with a great view!" />

                    <Button
                        android:id="@+id/btnOrderNow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description2"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="37dp"
                        android:onClick="onOrderNowClick"
                        android:text="Order Now" />

                    <Button
                        android:id="@+id/btnHeart2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description2"
                        android:layout_marginLeft="119dp"
                        android:layout_marginTop="43dp"
                        android:layout_toRightOf="@id/btnOrderNow2"
                        android:text="❤️" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="472dp"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="287dp"
                        android:layout_height="197dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="71dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/description3"
                        android:layout_width="297dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="-302dp"
                        android:layout_marginTop="298dp"
                        android:layout_toRightOf="@id/image3"
                        android:text="Cozy studio with a great view!" />

                    <Button
                        android:id="@+id/btnOrderNow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description3"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="37dp"
                        android:text="Order Now"
                        android:onClick="onOrderNowClick"/>

                    <Button
                        android:id="@+id/btnHeart3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description3"
                        android:layout_marginLeft="119dp"
                        android:layout_marginTop="43dp"
                        android:layout_toRightOf="@id/btnOrderNow3"
                        android:text="❤️" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/bottomNavigationView"

        android:layout_below="@id/horizontalScrollView">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        app:itemTextColor="#67BAD0"
        app:itemIconTint="#67BAD0"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>
